resource "aws_lambda_function" "alert_manager" {
  function_name = "ai-alert-manager"
  role          = aws_iam_role.lambda_role.arn
  handler       = "handler.handler"
  runtime       = "python3.11"
  timeout       = 30

  filename = "lambda.zip"

  environment {
    variables = {
      AGG_TABLE  = aws_dynamodb_table.aggregation.name
      AI_PROVIDER = "BEDROCK"
    }
  }
}
